<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="0dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="123dp"
            android:layout_weight="3.3"
            android:weightSum="4"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_noti_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="2dp"
                android:text="Outbreak mof Malaria in Mathare North Slums.. Due to "
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txt_noti_region"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Region : Mathare"
                android:textColor="@color/teal_700"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_noti_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="0dp"
                    android:text="Author : Dr. Makini"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_views"/>
                <TextView
                    android:id="@+id/txt_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:text="14"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_noti_image"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/load" />
    </LinearLayout>

</androidx.cardview.widget.CardView>