<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_date"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_date_calendar"/>

        <TextView
            android:id="@+id/txt_med_rec_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="12/05/2021"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_hospital"/>

        <TextView
            android:id="@+id/txt_med_rec_hospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_med_condition"/>
        <TextView
            android:id="@+id/txt_med_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broken Leg"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fee_charge"/>

        <TextView
            android:id="@+id/txt_fee_charged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ksh. 2,500"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>