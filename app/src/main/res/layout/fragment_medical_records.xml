<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MedicalRecordsFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_med_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@color/milky"
        tools:listitem="@layout/medical_record_row_item" />

    <ImageView
        android:id="@+id/img_no_available_med_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/no_record"/>

</FrameLayout>