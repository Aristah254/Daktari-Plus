<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1.3"
            android:fontFamily="cursive"
            android:text="Appointment Id : "
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt_appo_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" 120456 "
            android:textColor="@color/purple_700"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Doctor's Name : "
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_doc_name_appoi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" Dr. Jamaal Birkan "
            android:textColor="@color/purple_700"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Appointmen time: "
            android:fontFamily="cursive"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_time_appoi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" 12::00 - 12:20 "
            android:textColor="@color/purple_700"
            android:textSize="16dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Status "
            android:textColor="@color/design_default_color_secondary"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_status_appoi"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Pending "
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
</LinearLayout>

        <ImageView
            android:id="@+id/img_reasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_reasons_menu"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>