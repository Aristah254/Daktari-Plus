<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctormodule.DoctorAppointmentRequests">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_doc_appo_req"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            tools:listitem="@layout/doc_appointment_request_row_item" />



<TextView
    android:id="@+id/txt_no_r_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:textSize="32sp"
    android:visibility="gone"
    android:textColor="@color/purple_700"
    android:text="You Have No New Appointment Requests!!!"/>
    </RelativeLayout>
</FrameLayout>