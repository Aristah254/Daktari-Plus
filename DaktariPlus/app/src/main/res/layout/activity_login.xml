<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/docrec"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#00B8D4"
        android:textStyle="bold"
        android:text="Sign In"/>

    <EditText
        android:id="@+id/edtxt_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="18sp"
        android:textColorHint="#07A2BA"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="10dp"
        android:backgroundTint="#562196F3"
        android:background="@android:drawable/editbox_background"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>
    <EditText
        android:id="@+id/edtxt_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textColorHint="#07A2BA"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:backgroundTint="#562196F3"
        android:drawableLeft="@drawable/icon_lock"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:background="@android:drawable/editbox_background"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="forgot password?"
        android:textColor="#D1735B"
        android:gravity="center"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:textSize="16sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"/>

    <TextView
        android:id="@+id/txtV_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00C853"
        android:text="Don't have an account? Register here.."
        android:gravity="center"
        android:textSize="16sp"/>

</LinearLayout>