<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp">
    <ImageView
        android:id="@+id/img_doctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/load" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/cv"
            android:text="Dr. Livingstone wesonga"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_doc_name"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/cv"
            android:text="Hospital Nmae"
            android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txt_hos_name"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@+id/cv"
        android:src="@drawable/ic_pin_location" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_hos_name"
            android:layout_toRightOf="@+id/img_location"
            android:text="Hospital location"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_location"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/cv"
            android:text="Fee :"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/txt_fees"
            android:text="free"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_book_doc"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@color/purple_700"
                android:text="Book Appointment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>